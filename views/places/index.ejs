<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <style>
        /*Background*/
        body {
            background-image: url('/img/background.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        /* Menu */
        .vertical-menu {
            min-height: 200px;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            /* Needed to position the navbar */
            position: relative;
        }

        /* Position the navbar container inside the image */
        .container {
            position: absolute;
            margin: 20px;
            width: auto;
        }

        /* The navbar */
        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        /* Navbar links */
        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 20px 30px;
            text-decoration: none;
            font-size: 18px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        /*Map*/
        .container {
            position: relative;
            margin-left: auto;
            margin-right: auto;
        }

        .center {
            position: relative;
            top: 50%;
            width: 100%;
            text-align: center;
            font-size: 18px;
        }

        img {
            padding-left: 15px;
            padding-right: 15px;
            width: 1325px;
            height: 200px;
        }

        .table {
            padding-top: 50px;
            padding-bottom: 30px;
            padding-left: 80px;
        }

        .text {
            color: antiquewhite;
            font-size: 25px;
            padding-left: 25px;
            padding-right: 15px;
        }

        .header {
            color: antiquewhite;
            font-size: 35px;
            padding-left: 25px;
        }

        .search {
            color: antiquewhite;
            font-size: 22px;
            padding-left: 25px;
        }
    </style>
</head>

<body>

    <nav>
        <div class="bg-img">
            <div class="container">
                <div class="topnav">
                    <a href="/places">Places Manger</a>
                    <a href="/places/new">Add Place</a>
                    <% places.forEach(place => { %>
                    <a href="/places/<%= place.id %>"><%= place.placeName %></a>
                    <% }) %>
                </div>
            </div>
        </div>

    </nav>
    <section>

        <header>
            <h1 style="color: antiquewhite; text-align: center; font-size: 70px; ">Places Manger
            </h1>
        </header>
        <div class="center">
            <div class="header">
                <h3>Search Places :</h3>
                <form action="/places" method="GET">
                    <label>Name</label>
                    <input type="text" name="placeName" value="<%= searchOption.placeName %> ">
                    <button type="submit">Search</button>
                </form>
                <br>
            </div>
        </div>

        <div class="search">
            <ol style="font-size: 30px;">
                <% places.forEach(place => { %>

                <form method="POST" action="/places/<%= place.id %>?_method=DELETE">

                    <li>
                        <label style="font-size: 40px;"> <%= place.placeName %>
                        </label>
                        <a style="font-size: 25px; color: deepskyblue; padding: 8px;"
                            href="/places/<%= place.id %>"><strong>View </strong></a>
                        <a style="font-size: 25px; color: deepskyblue; padding: 8px; "
                            href="/places/<%= place.id %>/edit"><strong>Edit</strong></a>
                        <button type="submit">Delete</button>
                    </li>

                </form>
                <br>

                <% }) %>
            </ol>
        </div>
    </section>

</body>

</html>